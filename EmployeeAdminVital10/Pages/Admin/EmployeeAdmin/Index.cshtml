@page
@model EmployeeAdminVital10.Pages.Admin.EmployeeAdmin.IndexModel
@{
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-md-10">
            <h2>Employee Admin</h2>
        </div>
        <div class="col-md-2">
            <a asp-page="Create" class="btn btn-primary">Add Employee</a>
        </div>
    </div>
    <br />
    <form method="post" class="col-md-12">
        @if (Model.Employees.Count() > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Partner Id</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Employees)
                    {
                        <tr>
                            <th>@Html.DisplayFor(m => item.Id)</th>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Partner.Id)</td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this employee?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>There is nothing to show</p>
        }
    </form>
</div>