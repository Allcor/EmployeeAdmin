@page
@model EmployeeAdminVital10.Pages.Admin.EmployeeAdmin.UpsertModel
@{
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-md-12">
            <h2>@(Model.Employee.Id != 0 ? "Edit" : "Create") Employee</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                @if (Model.Employee.Id != 0)
                {
                    <input type="hidden" asp-for="Employee.Id" />
                }
                <div class="form-group">
                    <label for="EmployeeName">Employee Name</label>
                    <input asp-for="Employee.Name" class="form-control" id="EmployeeName" />
                    <span asp-validation-for="Employee.Name" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label for="EmployeePartner">Partner Employee</label>
                    <select asp-for="Employee.PartnerId" asp-items="Model.PartnerChoises" class="form-control" id="EmployeePartner">
                        <option value="-1"></option>
                    </select>
                    <span asp-validation-for="Employee.PartnerId" class="text-warning"></span>
                </div>
                <div class="text-warning" asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary form-control">@(Model.Employee.Id != 0 ? "Update" : "Create")</button>
                    </div>
                    <div class="col-md-4">
                        <a asp-page="Index" class="btn btn-primary form-control">Cansel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}